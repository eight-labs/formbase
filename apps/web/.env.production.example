# Production environment (.env.production)
# Use these values in Vercel environment settings.

# Drizzle / libSQL (Turso)
DATABASE_URL=libsql://<db-name>-<org>.turso.io
TURSO_AUTH_TOKEN=
NEXT_PUBLIC_APP_URL=https://<your-domain>
BETTER_AUTH_SECRET=

# OAuth (optional)
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# Email (Resend)
SMTP_TRANSPORT=resend
RESEND_API_KEY=

# Formbase
ALLOW_SIGNIN_SIGNUP=true

# Analytics (optional)
UMAMI_TRACKING_ID=

# Storage (Cloudflare R2, S3-compatible)
STORAGE_ENDPOINT=<account-id>.r2.cloudflarestorage.com
STORAGE_PORT=443
STORAGE_USESSL=true
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
STORAGE_BUCKET=
